<%= turbo_stream_from "categories" %>
<div class="flex gap-4">
  <div class="flex flex-col">
    <%= turbo_frame_tag "new_category_0", class:"mb-4" do %>
      <%= render partial: 'header', locals: { category_id: nil, depth: 0 } %>
    <% end %>

    <div id="categories_0">
      <% @categories.each do |category| %>
        <%= render partial: 'category', locals: { category: category } %>
      <% end %>
    </div>
  </div>

  <turbo-frame id="subcategory_0"></turbo-frame>
</div>
